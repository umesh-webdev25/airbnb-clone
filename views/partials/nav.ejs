<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Test Navbar</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/lucide@latest"></script>
</head>

<body class="bg-gray-50">

  <!-- Navbar -->
  <nav class="flex justify-between items-center h-20 w-full bg-white px-10 shadow-md hover:shadow-pink-200 transition-shadow">
    
    <!-- Logo & Title -->
    <div class="flex items-center gap-3">
      <!-- Home icon -->
      <i data-lucide="home" class="w-8 h-8 text-pink-600"></i>
      <h1 class="text-3xl font-extrabold text-pink-700 tracking-wide">Airbnb App</h1>
    </div>

    <!-- Navigation Links -->
    <div class="flex items-center space-x-4 text-sm font-medium">
      <a href="/" class="px-4 py-2 rounded-lg bg-pink-600 text-white hover:bg-pink-700 transition duration-300">Home</a>

      <% if (typeof isAuthenticated !== 'undefined' && isAuthenticated) { %>
        <a href="/index" class="px-4 py-2 rounded-lg bg-pink-600 text-white hover:bg-pink-700 transition duration-300">
          User
        </a>
        <a href="/listings/new" class="px-4 py-2 rounded-lg bg-pink-600 text-white hover:bg-pink-700 transition duration-300">
          Add Listing
        </a>
        <a href="/listings" class="px-4 py-2 rounded-lg bg-gray-200 text-pink-700 hover:bg-gray-300 transition duration-300">
          Listings
        </a>
      <% } %>

      <a href="/host/about" class="px-4 py-2 rounded-lg bg-gray-200 text-pink-700 hover:bg-gray-300 transition duration-300">
        About
      </a>

      <% if (typeof isAuthenticated !== 'undefined' && isAuthenticated) { %>
        <a href="/logout" class="px-4 py-2 rounded-lg bg-gray-200 text-pink-700 hover:bg-gray-300 transition duration-300">
          Logout
        </a>
      <% } else { %>
        <a href="/login" class="px-4 py-2 rounded-lg bg-pink-600 text-white hover:bg-pink-700 transition duration-300">
          Login
        </a>
      <% } %>
    </div>
  </nav>

  <script>
    lucide.createIcons();
  </script>

</body>
</html>
